<!-- Homepage -->
<html
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  i18n:domain="parruc.violareggiocalabria"
  metal:use-macro="context/main_template/macros/master">

  <metal:block fill-slot="content-core">
    <metal:title fill-slot="content-title"></metal:title>
    <!-- Ultima partita giocata -->
    <section id="m-a-n">
      <div class="row">
        <div class="col-xs-12 col-sm-8 no-padding-right match-container" tal:define="launch nocall:context/launch/to_object|nothing">
          <tal:block tal:condition="launch">
            <div class="tab" tal:content="launch/Title">Titolo lancio</div>
            <div class="match">
              <img src="" tal:define="scales context/@@bwimages" tal:replace="structure python:scales.tag('launch_image', width=785, height=150, direction='down')"/>
              <div class="launch-body" tal:content="structure launch/text/output">Testo del lancio</div>
            </div>
          </tal:block>
          <tal:block tal:condition="not:launch">
            <div class="tab" i18n="">Partite</div>
            <div class="match" tal:define="last_played_match view/last_played_match" tal:condition="last_played_match">
              <tal:block tal:define="home nocall:last_played_match/home/to_object;
                                           away nocall:last_played_match/away/to_object;">
                <div class="row">
                  <div class="team-logo col-xs-6 col-sm-6 no-padding-right">
                    <img src="" tal:define="scales home/@@images" tal:replace="structure python:scales.tag('image_teaser', width=393, height=150, direction='down', css_class='img-responsive')"/>
                  </div>
                  <div class="team-logo col-xs-6 col-sm-6 no-padding-left">
                    <img src="" tal:define="scales away/@@images" tal:replace="structure python:scales.tag('image_teaser', width=393, height=150, direction='down', css_class='img-responsive')"/>
                  </div>
                </div>
                <div class="row">
                  <div class="col-xs-6 col-sm-4 team-logo">
                    <img src="" tal:define="scales home/@@images" tal:replace="structure python:scales.tag('image_logo', width=100, height=999, direction='up', css_class='img-responsive')"/>
                  </div>
                  <div class="hidden-xs col-sm-4 team-league" tal:content="last_played_match/league">Campionato serie A2</div>
                  <div class="col-xs-6 col-sm-4 team-logo">
                    <img src="" tal:define="scales away/@@images" tal:replace="structure python:scales.tag('image_logo', width=100, height=999, direction='up', css_class='img-responsive')"/>
                  </div>
                </div>
                <div class="club-points row">
                  <div class="result col-xs-6 text-right">
                    <tal:block tal:replace="last_played_match/score_home">20</tal:block>
                  </div>
                  <span class="result-separator">:</span>
                  <div class="result col-xs-6 text-left padding-left">
                    <tal:block tal:replace="last_played_match/score_away">20</tal:block>
                  </div>
                </div>
                <div class="club-name row">
                  <span class="col-xs-6 text-left" tal:content="home/Title">Bayern</span>
                  <span class="col-xs-6 text-right" tal:content="away/Title">Arsenal</span>
                </div>
              </tal:block>
            </div>
          </tal:block>
          <!-- Prossime partite -->
          <div class="a-games" tal:define="future_matches view/future_matches" tal:condition="future_matches|nothing">
            <ul class="clearfix">
              <li tal:repeat="match future_matches">
                <span class="text-right"><tal:block tal:replace="match/home/to_object/Title"/></span>
                <span class="d-g" tal:content="match/start">14 Apr 21:45</span>
                <span class="text-left"><tal:block tal:replace="match/away/to_object/Title"/></span>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-xs-12 col-sm-4 no-padding-left news-container" tal:define="news view/latest_news" tal:condition="news">
          <div class="tab">News</div>
          <div class="tab-small">
            <a href="" tal:attributes="href view/news_link">Vedi tutte</a>
          </div>
          <div class="r-box-n">
            <article tal:repeat="new news">
              <h3>
                <a href="" tal:content="new/Title" tal:attributes="href new/absolute_url">La Viola-vola</a>
              </h3>
              <p tal:content="new/description">Testo di esempio</p>
              <span class="date-n" tal:content="python: view.format_news_date(new.effective())">21 Mar</span>
            </article>
          </div>
          <!-- Countdown prossima partita -->
          <div tal:define="next_match_datetime view/next_match_datetime" tal:condition="next_match_datetime|nothing" class="countdown">
            <div class="label" i18n="">Prossima partita</div>
            <div tal:attributes="data-deadline next_match_datetime" id="countdown" data-deadline="2020/10/10 12:34:56"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- Latest Videos -->
    <section id="video" tal:define="videos view/latest_videos" tal:condition="videos">
      <div class="row">
        <div id="v-tabs">
          <div class="col-sm-4 col-xs-12 no-padding-right">
            <ul>
              <li tal:repeat="video videos">
                <a href="#  section-1" tal:attributes="href string:#section-${repeat/video/number};">
                  <i class="icon-play"></i>
                  <tal:block tal:replace="video/Title">The title hunt in Europe's top leagues</tal:block>
                </a>
              </li>
            </ul>
          </div>
          <div class="col-sm-8 col-xs-12 no-padding-left">
            <tal:block tal:repeat="video videos">
              <div class="tab-content" tal:attributes="id string:section-${repeat/video/number}">
                <iframe width="560" height="329" style="border:0;" src="" tal:attributes="src video/url" allowfullscreen=""></iframe>
              </div>
            </tal:block>
          </div>
        </div>
      </div>
    </section>

    <!-- Players -->
    <section id="players" tal:define="players view/players" tal:condition="players">
      <div class="row">
        <div class="players">
          <div class="col-xs-4 no-padding-right">
            <div class="our">
              <h3 i18n:translate="">
                <span i18n:translate="">I nostri</span>
                Giocatori</h3>
            </div>
            <div class="all-team">
              <a href="" tal:attributes="href view/roster_link" i18n:translate="">Vedi la squadra ›</a>
            </div>
            <div class="bx-controls hidden-xs"></div>
          </div>
          <div class="col-xs-8 no-padding-left">
            <div class="players-slider">
              <div tal:repeat="player players" class="slide col-4">
                <img src="" tal:define="scales player/@@images" tal:replace="structure python:scales.tag('image', width=157, height=177, direction='down')"/>
                <div class="player-name">
                  <a href="" tal:attributes="href player/absolute_url" tal:content="string: ${player/name} ${player/surname}">Jan Kirchhoff</a>
                  <p tal:content="player/role">Defender</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Twitter -->
    <section id="ttb">
      <div class="row table-row">
        <div class="col-sm-4 col-xs-12 no-padding-right twiter" id="twitter" tal:define="tweets view/tweets">
          <div class="tw-title">
            <h3>Latest Tweets</h3>
            <ul class="clearfix t-post" tal:condition="tweets">
              <li tal:repeat="tweet tweets">
                <p tal:content="structure tweet/text">Contenuto del tweet</p>
                <a tal:attributes="href string: https://twitter.com/${tweet/name}" tal:content="string:@${tweet/name}">@Viola_RC</a>
              </li>
            </ul>
            <p tal:condition="not:tweets">
                Non sono presenti tweets al momento
            </p>
            <tal:block tal:repeat="tweet tweets"></tal:block>
          </div>
        </div>

        <!--Partners -->
        <div class="col-sm-4 col-xs-12 no-padding" id="partners" tal:define="partners view/partners" tal:condition="partners">
          <div class="partners">
            <div class="sp-title">
              <h3 i18n:translate="">Partners</h3>
            </div>
            <div class="sp-img" tal:repeat="partner partners">
              <img src="" tal:define="scales partner/@@images" tal:replace="structure python:scales.tag('image', height=90, direction='down')"/>
            </div>
          </div>
        </div>

        <!--Classifica -->
        <div class="col-sm-4 col-xs-12 no-padding-left" id="classifica" tal:define="classifica view/classifica" tal:condition="classifica">
          <div class="liga-t">
            <div class="bu-title">
              <h3 i18n:translate="">Serie A2</h3>
            </div>
            <table class="table-striped">
              <tr class="t-h">
                <th class="t-c">Pos</th>
                <th>Club</th>
                <th>Pld</th>
                <th>Pts</th>
              </tr>
              <tr tal:repeat="squadra classifica">
                <td class="t-c" tal:content="repeat/squadra/number">1</td>
                <td tal:content="squadra/Title">FC Bayern München</td>
                <td tal:content="squadra/played">36</td>
                <td tal:content="squadra/points">81</td>
              </tr>
            </table>
          </div>
        </div>
      </div>
    </section>

    <!--Sponsors -->
    <section id="sponsors" tal:define="sponsors view/sponsors" tal:condition="sponsors">
      <div class="row">
        <div class="col-xs-2" tal:repeat="sponsor sponsors">
          <a href="#" tal:attributes="href sponsor/link">
            <img src="" tal:define="scales sponsor/@@images" tal:replace="structure python:scales.tag('image', height=90, direction='down')"/>
          </a>
        </div>
      </div>
    </section>
  </metal:block>
</html>
