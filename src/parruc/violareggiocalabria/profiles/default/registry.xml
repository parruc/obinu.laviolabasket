<?xml version="1.0"?>
<registry>
    <!-- SCALES -->
    <records prefix="plone"
             interface="Products.CMFPlone.interfaces.controlpanel.IImagingSchema">
      <value key="allowed_sizes" purge="true">
        <element>slide 1920:9999</element>
        <element>large 768:768</element>
        <element>preview 400:400</element>
        <element>mini 200:200</element>
        <element>logo 131:131</element>
        <element>thumb 128:128</element>
        <element>tile 64:64</element>
        <element>icon 32:32</element>
        <element>listing 16:16</element>
      </value>
    </records>

    <!-- HTML FILTERING -->
    <records prefix="plone"
             interface="Products.CMFPlone.interfaces.controlpanel.IFilterSchema">
    <value key="nasty_tags">
      <element>style</element>
      <element>applet</element>
      <element>script</element>
      <element>meta</element>
    </value>
</records>
</registry>
